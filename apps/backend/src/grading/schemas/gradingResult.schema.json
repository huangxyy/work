{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GradingResult",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "totalScore",
    "dimensionScores",
    "errors",
    "suggestions",
    "summary",
    "nextSteps"
  ],
  "properties": {
    "totalScore": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "dimensionScores": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "grammar",
        "vocabulary",
        "structure",
        "content",
        "coherence"
      ],
      "properties": {
        "grammar": {
          "type": "number",
          "minimum": 0,
          "maximum": 20
        },
        "vocabulary": {
          "type": "number",
          "minimum": 0,
          "maximum": 20
        },
        "structure": {
          "type": "number",
          "minimum": 0,
          "maximum": 20
        },
        "content": {
          "type": "number",
          "minimum": 0,
          "maximum": 20
        },
        "coherence": {
          "type": "number",
          "minimum": 0,
          "maximum": 20
        },
        "handwritingClarity": {
          "type": "number",
          "minimum": 0,
          "maximum": 20
        }
      }
    },
    "errors": {
      "type": "array",
      "maxItems": 60,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "message",
          "original",
          "suggestion"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "grammar",
              "vocabulary",
              "structure",
              "content",
              "coherence",
              "spelling",
              "punctuation",
              "style",
              "clarity",
              "other"
            ]
          },
          "message": {
            "type": "string",
            "maxLength": 200
          },
          "original": {
            "type": "string",
            "maxLength": 200
          },
          "suggestion": {
            "type": "string",
            "maxLength": 200
          },
          "startIndex": {
            "type": "integer",
            "minimum": 0
          },
          "endIndex": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "suggestions": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "low",
        "mid",
        "high"
      ],
      "properties": {
        "low": {
          "type": "array",
          "maxItems": 12,
          "items": {
            "type": "string",
            "maxLength": 200
          }
        },
        "mid": {
          "type": "array",
          "maxItems": 12,
          "items": {
            "type": "string",
            "maxLength": 200
          }
        },
        "high": {
          "type": "array",
          "maxItems": 12,
          "items": {
            "type": "string",
            "maxLength": 200
          }
        },
        "rewrite": {
          "type": "string",
          "maxLength": 1500
        }
      }
    },
    "summary": {
      "type": "string",
      "maxLength": 300
    },
    "nextSteps": {
      "type": "array",
      "maxItems": 8,
      "items": {
        "type": "string",
        "maxLength": 200
      }
    }
  }
}
