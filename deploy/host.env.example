# Copy this file to deploy/host.env before running deployment scripts.
# Example:
#   cp deploy/host.env.example deploy/host.env

# Project paths
APP_DIR=/www/homework-ai
WEB_ROOT=/www/wwwroot/aigzy.cn
DOMAIN=aigzy.cn
API_PORT=3008

# Git source
REPO_URL=CHANGE_ME
BRANCH=main

# MySQL setup
DB_NAME=homework_ai
DB_USER=homework_ai
DB_PASS=CHANGE_ME
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=
SKIP_MYSQL_SETUP=0

# App security
JWT_SECRET=CHANGE_ME
CORS_ORIGIN=https://aigzy.cn,http://aigzy.cn

# MinIO
MINIO_DATA=/www/minio-data
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME

# OCR / LLM
BAIDU_OCR_API_KEY=
BAIDU_OCR_SECRET_KEY=
LLM_PROVIDER=
LLM_API_KEY=
LLM_BASE_URL=
LLM_MODEL=
LLM_MODEL_CHEAPER=
LLM_MODEL_QUALITY=

# Runtime behavior
RUN_RETENTION=true

# Update script options
PNPM_VERSION=8.15.9
RUN_MIGRATIONS=1
USE_SUDO=1
API_SERVICE=homework-ai-api
WORKER_SERVICE=homework-ai-worker
VITE_API_BASE_URL=/api

# Health check options
CHECK_HEALTH=1
REQUIRE_HEALTHY=0
HEALTH_URL=http://127.0.0.1:3008/api/health
HEALTH_MAX_ATTEMPTS=20
HEALTH_RETRY_INTERVAL=3
